name: Automatic Code Review

on:
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  auto-review:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Request Copilot Review
        uses: github/copilot-review-action@v1
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          
      - name: Auto-assign reviewers
        uses: kentaro-m/auto-assign-action@v1.2.5
        with:
          configuration-path: '.github/auto-assign.yml'

  schema-validation:
    runs-on: ubuntu-latest
    if: contains(github.event.pull_request.changed_files, '.sql') || contains(github.event.pull_request.changed_files, 'schema')
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        
      - name: Validate Schema Changes
        run: |
          echo "üîç Reviewing schema changes..."
          # Add your schema validation logic here
          if find . -name "*.sql" -newer .git/HEAD~1 | grep -q .; then
            echo "‚úÖ Schema files detected - triggering detailed review"
          fi
          
      - name: Comment on PR
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: 'üèë **POWLAX Schema Review Bot**\n\nSchema changes detected! Automatic review initiated.\n\n- [ ] Database compatibility check\n- [ ] Migration safety review\n- [ ] Performance impact analysis'
            })